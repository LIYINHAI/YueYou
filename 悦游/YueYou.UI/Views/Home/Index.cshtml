@model YueYou.UI.Models.HomeViewModel
@section styles {
    @Styles.Render("~/Content/index.css")
}
<div class="slider">
    <div class="callbacks_container">
        <div id="myCarousel" class="carousel slide">

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/Lunbo/a1.jpg">
                </div>
                <div class="item">
                    <img src="~/images/Lunbo/a2.jpg">
                </div>
                <div class="item">
                    <img src="~/images/Lunbo/a3.jpg">
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<!--轮播结束-->
<!--导游展示-->
<div class="main-white">
    <div class="guide-container container">
        <div class="guide-head" id="guide-head">
            <h2 class="guide-text">明星导游</h2>
        </div>
        @foreach (var item in Model.guide)
        {
            <div class="guide" id="guide">

                <a href="@Url.Action("GuideDetails", "GuideDetails", new { id = item.Guide_id })" target="_blank">
                    <div class="guide-section">
                        <img src="@item.Guide_photo" class="guide-img" />
                        <p class="content-title">@item.GuideDetails.Guide_tips</p>
                    </div>
                    <p>
                        <span class="guide-left guide-tip">@item.Guide_rname</span>
                        <span class="guide-right guide-tip">CNY 400起</span>
                    </p>
                    <p>
                        <span class="guide-left">@item.GuideDetails.Guide_job</span>
                        <span class="guide-right guide-level guide-tip">@item.GuideDetails.Guide_job</span>
                    </p>
                    <p>
                        <i class="li"></i>
                        <span class="guide-left">@item.Guide_area</span>
                    </p>
                </a>

            </div>
        }
    </div>
</div>
<!--展示结束-->
<!-- 回到顶部按钮 -->
<div id="to-top">
    <a href="#"><img src="~/images/Icont/回到顶部.png" class="returntop" id="to_top-images"></a>
</div>

